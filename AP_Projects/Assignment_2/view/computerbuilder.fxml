<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>


<VBox  styleClass="root" alignment="center" spacing="10" 
       fx:controller="controller.ComputerBuilderController" 
       xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@computerbuilder.css"/>
    </stylesheets>
    
    <ImageView> 
        <image>
            <Image url="/view/parts.jpg"></Image>
        </image>
    </ImageView> 
    <Label styleClass="h1" text="Computer Builder"/>
    <HBox alignment="center" spacing="10">
        <Button fx:id="viewcatalogueBtn" styleClass="largeButton" text="View Catalogue" wrapText="true" onAction="#handleVCatalogue"/>
        <Button fx:id="viewbuildBtn" styleClass="largeButton" text="View     Build" alignment="center" wrapText="true" onAction="#handleVBuild"/>
    </HBox>
    <Button fx:id="quitBtn" styleClass="Button" text="Quit" onAction="#handleQuit"/>
</VBox>    


